<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="ProductItem" t-inherit="point_of_sale.ProductItem" t-inherit-mode="extension" owl="1">

        <xpath expr="//article/div[hasclass('product-img')]" position="inside">

            <i class="minus-button fa fa-minus" aria-hidden="true" role="img" aria-label="Sub" title="Sub" t-on-click.stop="OnSubClick()"/>

            <i class="plus-button fa fa-plus" aria-hidden="true" role="img" aria-label="Add" title="Add" />

        </xpath>
    </t>

</templates>

