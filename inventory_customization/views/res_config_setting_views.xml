<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
        <record id="res_config_settings_view_form_inherit_inventory_customization" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.inventory.customization</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='group_stock_reception_report']" position="after">
                <group>
                    <div class="col-12 col-lg-6 o_setting_box" id="reception_report">
                        <div class="o_setting_left_pane">
                            <field name="is_check"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_check"/>
                        </div>
                    </div>
                </group>
            </xpath>
        </field>
        </record>
    
    </data>

</odoo>
